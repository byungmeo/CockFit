<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeRecipeActivity">

    <ImageView
        android:id="@+id/make_button_backButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:onClick="clickButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/make_textView_screenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="나만의 칵테일 제조"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/make_button_backButton"
        app:layout_constraintStart_toEndOf="@+id/make_button_backButton"
        app:layout_constraintTop_toTopOf="@+id/make_button_backButton"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/make_button_store"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="clickButton"
        android:text="저장"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_receipt_long_24"
        app:iconGravity="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="410dp"
        android:layout_height="595dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/make_imageView_addImage"
                    android:layout_width="380dp"
                    android:layout_height="300dp"
                    android:onClick="clickButton"
                    app:srcCompat="@drawable/ic_baseline_wine_bar_24" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/make_editText_name"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:startIconContentDescription="CocktailName"
                    app:startIconDrawable="@drawable/ic_baseline_list_alt_24">
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="이름"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/make_editText_proof"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:hint="도수"
                    app:boxBackgroundColor="@color/white"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    app:startIconContentDescription="CocktailProof"
                    app:startIconDrawable="@drawable/ic_baseline_proof_24">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/make_editText_base"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:hint="기주"
                    app:boxBackgroundColor="@color/white"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:startIconContentDescription="email"
                    app:startIconDrawable="@drawable/ic_baseline_base_24">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/make_editText_ingredient"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:hint="재료"
                    app:boxBackgroundColor="@color/white"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:startIconContentDescription="email"
                    app:startIconDrawable="@drawable/ic_baseline_ingredient_24">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/make_editText_equipment"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:hint="장비"
                    app:boxBackgroundColor="@color/white"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:startIconContentDescription="email"
                    app:startIconDrawable="@drawable/ic_shaker">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/make_editText_tags"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:hint='태그 (", "구분)'
                    app:boxBackgroundColor="@color/white"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:startIconContentDescription="email"
                    app:startIconDrawable="@drawable/ic_baseline_tag_24">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/make_editText_description"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    android:padding="5dp">
                    <EditText
                        android:layout_width="400dp"
                        android:layout_height="200dp"
                        android:ems="12"
                        android:gravity="start|top"
                        android:hint="상세설명을 입력하세요 \n1.\n2.\n3.\n..."
                        android:inputType="textMultiLine"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
