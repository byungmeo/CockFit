<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="clickButton"
    tools:context=".CocktailInfoFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/commonsense_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/commonsense_materialToolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar_etc_list"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="칵테일 기본 상식" />
    </com.google.android.material.appbar.AppBarLayout>


    <Button
        android:id="@+id/commonsense_technique_button"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_cocktail_equipment_image"
        android:drawablePadding="-5dp"
        android:elevation="15dp"
        android:fontFamily="@font/nanumbarunpenb"
        android:onClick="clickButton"
        android:paddingTop="15sp"
        android:shape="rectangle"
        android:text="기법"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commonsense_basespirit_button" />

    <Button
        android:id="@+id/commonsense_basespirit_button"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_base_bottle"
        android:drawablePadding="-5dp"
        android:elevation="15dp"
        android:fontFamily="@font/nanumbarunpenb"
        android:onClick="clickButton"
        android:paddingTop="15sp"
        android:shape="rectangle"
        android:text="기주"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/commonsense_technique_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commonsense_appBarLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>