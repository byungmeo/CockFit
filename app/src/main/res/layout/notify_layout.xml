<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/bottomborder"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/notify_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/notify_textView_nickname"
        app:layout_constraintStart_toStartOf="@+id/notify_textView_nickname"
        app:layout_constraintTop_toBottomOf="@+id/notify_textView_nickname" />

    <TextView
        android:id="@+id/notify_textView_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notify_textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/notify_textView_nickname"
        app:layout_constraintStart_toEndOf="@+id/notify_textView_nickname"
        app:layout_constraintTop_toTopOf="@+id/notify_textView_nickname" />

    <TextView
        android:id="@+id/notify_textView_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/notify_textView_title"
        app:layout_constraintStart_toEndOf="@+id/notify_textView_title"
        app:layout_constraintTop_toBottomOf="@+id/notify_textView_nickname"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/notify_imageButton_delete"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:background="@null"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete"
        app:tint="@color/CockFitMainColor1" />

</androidx.constraintlayout.widget.ConstraintLayout>