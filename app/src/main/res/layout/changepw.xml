<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="비밀번호 변경"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="3dp" />

    <EditText
        android:id="@+id/changePw_editText_changePw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="변경할 비밀번호를 입력해주세요."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textViewTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <EditText
        android:id="@+id/changePw_editText_checkPw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="비밀번호를 확인해주세요."
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/changePw_editText_changePw"
        app:layout_constraintStart_toStartOf="@+id/changePw_editText_changePw"
        app:layout_constraintTop_toBottomOf="@+id/changePw_editText_changePw" />

    <Button
        android:id="@+id/changePw_button_cancel"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:text="취소"
        app:layout_constraintEnd_toStartOf="@+id/changePw_button_ok"
        app:layout_constraintTop_toBottomOf="@+id/changePw_editText_checkPw" />

    <Button
        android:id="@+id/changePw_button_ok"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="@+id/changePw_button_cancel"
        app:layout_constraintEnd_toEndOf="@+id/changePw_editText_checkPw"
        app:layout_constraintTop_toTopOf="@+id/changePw_button_cancel"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>